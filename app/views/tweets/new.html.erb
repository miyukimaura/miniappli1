<div class="contents row">
  <%= form_tag('/tweets', method: :post) do %>
    <h3>
      投稿画面
    </h3>
    <input placeholder="タイトル" type="text" name="name">
    <input placeholder="画像URL" type="text" name="image">
    <textarea cols="30" name="text" placeholder="本文" rows="10"></textarea>
    <input type="submit" value="投稿ボタン">
  <% end %>
</div>